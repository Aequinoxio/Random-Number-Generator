<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/app_blue</item>

        <!-- Dialog styling -->
        <item name="md_positive_color">@color/app_blue</item>
        <item name="md_negative_color">@color/app_blue</item>
        <item name="md_neutral_color">@color/app_blue</item>
    </style>

    <style name="no_action_bar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/app_blue</item>

        <!-- Dialog theming -->
        <item name="md_dark_theme">false</item>
    </style>

    <style name="SplashTheme" parent="no_action_bar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>
