<resources>
    <style name="ripple_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_button</item>
    </style>

    <style name="button_ripple_attributes">
        <item name="rd_rippleType">touch</item>
        <item name="rd_backgroundAnimDuration">0</item>
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_maxRippleRadius">match_view</item>
        <item name="rd_rippleAnimDuration">@integer/shorter_anim_length</item>
        <item name="rd_delayClick">untilRelease</item>
    </style>

    <style name="number_input_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="input_prefix_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="action_icon">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="action_item">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">28dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">-6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="cbd_animDuration">@integer/shorter_anim_length</item>
        <item name="cbd_strokeColor">@color/app_blue</item>
    </style>

    <style name="results">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/app_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
