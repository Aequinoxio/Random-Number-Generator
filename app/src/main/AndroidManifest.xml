<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomappsinc.randomnumbergeneratorplus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".Utils.MyApplication"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            android:configChanges="orientation|screenSize"
            android:theme="@style/no_action_bar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/settings"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".Activities.EditExcludedActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/excluded_page_label"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:label="@string/edit_configurations"
            android:name=".Activities.EditConfigurationsActivity"
            android:configChanges="orientation|screenSize">
        </activity>
    </application>
</manifest>
